@model List<Tixxp.Entities.CurrencyType.CurrencyTypeEntity>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />

<div class="main-content app-content">
    <div class="container-fluid">

        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb text-fixed-white">
            <h1 class="page-title fw-medium fs-18 mb-0 text-fixed-white">@Localizer["currencyType.INDEX.TITLE"]</h1>
            @if (User.IsInRole("TIXXP_CURRENCY_TYPE_ADD"))
            {
                <button class="btn btn-primary" onclick="openAddModal()">+ @Localizer["currencyType.INDEX.ADD"]</button>
            }
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered text-nowrap w-100">
                                <thead>
                                    <tr>
                                        <th>@Localizer["currencyType.INDEX.NAME"]</th>
                                        <th>@Localizer["currencyType.INDEX.SYMBOL"]</th>
                                        <th>@Localizer["currencyType.INDEX.TAG"]</th>
                                        @if (User.IsInRole("TIXXP_CURRENCY_TYPE_EDIT") || User.IsInRole("TIXXP_CURRENCY_TYPE_DELETE"))
                                        {
                                            <th>@Localizer["currencyType.INDEX.ACTIONS"]</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var currency in Model)
                                        {
                                            <tr>
                                                <td>@currency.Name</td>
                                                <td>@currency.Symbol</td>
                                                <td>@currency.Tag</td>
                                                @if (User.IsInRole("TIXXP_CURRENCY_TYPE_EDIT") || User.IsInRole("TIXXP_CURRENCY_TYPE_DELETE"))
                                                {
                                                    <td>
                                                        <div class="hstack gap-2 fs-15">
                                                            @if (User.IsInRole("TIXXP_CURRENCY_TYPE_EDIT"))
                                                            {
                                                                <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                                   onclick="openEditModal(@currency.Id, '@currency.Name.Replace("'", "\\'")', '@currency.Symbol.Replace("'", "\\'")', '@currency.Tag.Replace("'", "\\'")')"
                                                                   title="@Localizer["currencyType.INDEX.EDIT"]">
                                                                    <i class="ri-edit-line"></i>
                                                                </a>
                                                            }
                                                            @if (User.IsInRole("TIXXP_CURRENCY_TYPE_DELETE"))
                                                            {
                                                                <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                                   onclick="deleteCurrency(@currency.Id)"
                                                                   title="@Localizer["currencyType.INDEX.DELETE"]">
                                                                    <i class="ri-delete-bin-line"></i>
                                                                </a>
                                                            }
                                                        </div>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center">@Localizer["currencyType.INDEX.NO_RECORDS_FOUND"]</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="currencyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="currencyForm">
                    <input type="hidden" id="currencyId" name="Id" />

                    <div class="mb-3">
                        <label>@Localizer["currencyType.INDEX.NAME"]</label>
                        <input type="text" class="form-control" id="currencyName" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label>@Localizer["currencyType.INDEX.SYMBOL"]</label>
                        <input type="text" class="form-control" id="currencySymbol" name="Symbol" />
                    </div>
                    <div class="mb-3">
                        <label>@Localizer["currencyType.INDEX.TAG"]</label>
                        <input type="text" class="form-control" id="currencyTag" name="Tag" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">@Localizer["currencyType.INDEX.SAVE"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const localizer = {
            title: '@Localizer["currencyType.INDEX.TITLE"].Value.Replace("'", "\\'")',
            addTitle: '@Localizer["currencyType.INDEX.ADD_CURRENCY_TYPE"].Value.Replace("'", "\\'")',
            updateTitle: '@Localizer["currencyType.INDEX.UPDATE_CURRENCY_TYPE"].Value.Replace("'", "\\'")',
            success: '@Localizer["currencyType.INDEX.SUCCESS"].Value.Replace("'", "\\'")',
            error: '@Localizer["currencyType.INDEX.ERROR"].Value.Replace("'", "\\'")',
            areYouSure: '@Localizer["currencyType.INDEX.ARE_YOU_SURE"].Value.Replace("'", "\\'")',
            deleteConfirmation: '@Localizer["currencyType.INDEX.DELETE_CONFIRMATION"].Value.Replace("'", "\\'")',
            yesDelete: '@Localizer["currencyType.INDEX.YES_DELETE"].Value.Replace("'", "\\'")',
            deleted: '@Localizer["currencyType.INDEX.DELETED"].Value.Replace("'", "\\'")'
        };

        function openAddModal() {
            $('#currencyForm')[0].reset();
            $('#currencyId').val('');
            $('#modalTitle').text(localizer.addTitle);
            $('#currencyModal').modal('show');
        }

        function openEditModal(id, name, symbol, tag) {
            $('#currencyId').val(id);
            $('#currencyName').val(name);
            $('#currencySymbol').val(symbol);
            $('#currencyTag').val(tag);
            $('#modalTitle').text(localizer.updateTitle);
            $('#currencyModal').modal('show');
        }

        $('#currencyForm').submit(function (e) {
            e.preventDefault();
            var formData = $(this).serialize();
            $.post('/CurrencyType/Save', formData, function (response) {
                if (response.success) {
                    Swal.fire(localizer.success, response.message, 'success').then(() => location.reload());
                } else {
                    Swal.fire(localizer.error, response.message, 'error');
                }
            });
        });

        function deleteCurrency(id) {
            Swal.fire({
                title: localizer.areYouSure,
                text: localizer.deleteConfirmation,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: localizer.yesDelete
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/CurrencyType/Delete', { id: id }, function (response) {
                        if (response.success) {
                            Swal.fire(localizer.deleted, response.message, 'success').then(() => location.reload());
                        } else {
                            Swal.fire(localizer.error, response.message, 'error');
                        }
                    });
                }
            });
        }
    </script>
}