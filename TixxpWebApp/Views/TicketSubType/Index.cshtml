@model List<Tixxp.Entities.TicketSubType.TicketSubTypeEntity>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Localizer["ticketSubType.INDEX.TITLE"].Value;
}

<div class="main-content app-content">
    <div class="container-fluid">
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb text-fixed-white">
            <h1 class="page-title fw-medium fs-18 mb-0 text-fixed-white">@Localizer["ticketSubType.INDEX.TITLE"]</h1>
            @if (User.IsInRole("TIXXP_TICKET_SUBTYPE_ADD"))
            {
                <button class="btn btn-primary btn-sm" onclick="openEditTicketSubTypeModal(0)">+ @Localizer["ticketSubType.INDEX.ADD_NEW"]</button>
            }
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">@Localizer["ticketSubType.INDEX.SUB_TYPES"]</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered text-nowrap table-sm">
                                <thead>
                                    <tr>
                                        <th>@Localizer["ticketSubType.INDEX.NAME"]</th>
                                        <th>@Localizer["ticketSubType.INDEX.DESCRIPTION"]</th>
                                        <th>@Localizer["ticketSubType.INDEX.TICKET_TYPE"]</th>
                                        @if (User.IsInRole("TIXXP_TICKET_SUBTYPE_EDIT") || User.IsInRole("TIXXP_TICKET_SUBTYPE_DELETE"))
                                        {
                                            <th>@Localizer["ticketSubType.INDEX.ACTIONS"]</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                <td>@item.Description</td>
                                                <td>@item.TicketType?.Name</td>
                                                @if (User.IsInRole("TIXXP_TICKET_SUBTYPE_EDIT") || User.IsInRole("TIXXP_TICKET_SUBTYPE_DELETE"))
                                                {
                                                    <td>
                                                        <div class="hstack gap-2 fs-15">
                                                            @if (User.IsInRole("TIXXP_TICKET_SUBTYPE_EDIT"))
                                                            {
                                                                <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                                   onclick="openEditTicketSubTypeModal(@item.Id)"
                                                                   title="@Localizer["ticketSubType.INDEX.EDIT"]">
                                                                    <i class="ri-edit-line"></i>
                                                                </a>
                                                            }
                                                            @if (User.IsInRole("TIXXP_TICKET_SUBTYPE_DELETE"))
                                                            {
                                                                <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                                   onclick="confirmDeleteTicketSubType(@item.Id)"
                                                                   title="@Localizer["ticketSubType.INDEX.DELETE"]">
                                                                    <i class="ri-delete-bin-line"></i>
                                                                </a>
                                                            }
                                                        </div>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="4" class="text-center">@Localizer["ticketSubType.INDEX.NO_RECORDS_FOUND"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="editTicketSubTypeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="editTicketSubTypeModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editTicketSubTypeForm">
                    <input type="hidden" id="editTicketSubTypeId" name="Id" />
                    <div class="mb-3">
                        <label class="form-label">@Localizer["ticketSubType.INDEX.SUB_TYPE_NAME"]</label>
                        <input type="text" class="form-control" id="editTicketSubTypeName" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["ticketSubType.INDEX.DESCRIPTION"]</label>
                        <textarea class="form-control" id="editTicketSubTypeDescription" name="Description"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Localizer["ticketSubType.INDEX.TICKET_TYPE"]</label>
                        <select class="form-select" id="editTicketTypeId" name="TicketTypeId" required>
                            <option value="">@Localizer["ticketSubType.INDEX.SELECT"]</option>
                            @foreach (var ticketType in ViewBag.TicketTypes as List<Tixxp.Entities.TicketType.TicketTypeEntity>)
                            {
                                <option value="@ticketType.Id">@ticketType.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">@Localizer["ticketSubType.INDEX.SAVE"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const localizer = {
            areYouSure: '@Localizer["ticketSubType.INDEX.ARE_YOU_SURE"].Value.Replace("'", "\\'")',
            deleteConfirmation: '@Localizer["ticketSubType.INDEX.DELETE_CONFIRMATION"].Value.Replace("'", "\\'")',
            yesDelete: '@Localizer["ticketSubType.INDEX.YES_DELETE"].Value.Replace("'", "\\'")',
            cancel: '@Localizer["ticketSubType.INDEX.CANCEL"].Value.Replace("'", "\\'")',
            deleted: '@Localizer["ticketSubType.INDEX.DELETED"].Value.Replace("'", "\\'")',
            success: '@Localizer["ticketSubType.INDEX.SUCCESS"].Value.Replace("'", "\\'")',
            error: '@Localizer["ticketSubType.INDEX.ERROR"].Value.Replace("'", "\\'")',
            serverError: '@Localizer["ticketSubType.INDEX.SERVER_ERROR"].Value.Replace("'", "\\'")',
            dataError: '@Localizer["ticketSubType.INDEX.DATA_ERROR"].Value.Replace("'", "\\'")',
            addSubType: '@Localizer["ticketSubType.INDEX.ADD_SUB_TYPE"].Value.Replace("'", "\\'")',
            editSubType: '@Localizer["ticketSubType.INDEX.EDIT_SUB_TYPE"].Value.Replace("'", "\\'")'
        };

        function openEditTicketSubTypeModal(id) {
            const modal = $('#editTicketSubTypeModal');
            const form = $('#editTicketSubTypeForm');
            const title = $('#editTicketSubTypeModalTitle');

            if (id === 0) {
                form[0].reset();
                $('#editTicketSubTypeId').val(0);
                title.text(localizer.addSubType);
                modal.modal('show');
                return;
            }

            $.get('/TicketSubType/GetById', { id: id }, function (data) {
                $('#editTicketSubTypeId').val(data.id);
                $('#editTicketSubTypeName').val(data.name);
                $('#editTicketSubTypeDescription').val(data.description);
                $('#editTicketTypeId').val(data.ticketTypeId);
                title.text(localizer.editSubType);
                modal.modal('show');
            }).fail(() => Swal.fire(localizer.error, localizer.dataError, "error"));
        }

        $('#editTicketSubTypeForm').submit(function (e) {
            e.preventDefault();

            const id = Number($('#editTicketSubTypeId').val());
            const data = {
                Id: id,
                Name: $('#editTicketSubTypeName').val(),
                Description: $('#editTicketSubTypeDescription').val(),
                TicketTypeId: $('#editTicketTypeId').val()
            };

            const url = id === 0 ? '/TicketSubType/Create' : '/TicketSubType/Update';

            $.ajax({
                url: url,
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (response) {
                    if (response.success) {
                        Swal.fire(localizer.success, response.message, "success").then(() => location.reload());
                    } else {
                        Swal.fire(localizer.error, response.message, "error");
                    }
                },
                error: () => Swal.fire(localizer.error, localizer.serverError, "error")
            });
        });

        function confirmDeleteTicketSubType(id) {
            Swal.fire({
                title: localizer.areYouSure,
                text: localizer.deleteConfirmation,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: localizer.yesDelete,
                cancelButtonText: localizer.cancel
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/TicketSubType/Delete', { id: id }, function (response) {
                        if (response.success) {
                            Swal.fire(localizer.deleted, response.message, "success").then(() => location.reload());
                        } else {
                            Swal.fire(localizer.error, response.message, "error");
                        }
                    }).fail(() => Swal.fire(localizer.error, localizer.serverError, "error"));
                }
            });
        }
    </script>
}
