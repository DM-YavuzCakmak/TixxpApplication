@using Microsoft.AspNetCore.Mvc.Localization
@using System.Linq
@model List<Tixxp.WebApp.Models.Counter.CounterListVm>
@inject IViewLocalizer Localizer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content app-content">
    <div class="container-fluid">
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb text-fixed-white">
            <h1 class="page-title fw-medium fs-18 mb-0 text-fixed-white">@Localizer["counter.INDEX.TITLE"]</h1>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">@Localizer["counter.INDEX.COUNTER_LIST"]</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-nowrap table-sm">
                                <thead>
                                    <tr>
                                        <th>@Localizer["counter.INDEX.COUNTER_NAME"]</th>
                                        <th>@Localizer["counter.INDEX.OKC_SERIAL"]</th>
                                        <th>@Localizer["counter.INDEX.IP"]</th>
                                        <th>@Localizer["counter.INDEX.OKC"]</th>
                                        <th>@Localizer["counter.INDEX.TSM"]</th>
                                        <th>@Localizer["counter.INDEX.GMP"]</th>
                                        <th>@Localizer["counter.INDEX.ACTION"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var counter in Model)
                                        {
                                            <tr>
                                                <td>@counter.Name</td>
                                                <td>@counter.OkcFiscalSerialNumber</td>
                                                <td>@counter.IpAddress</td>
                                                <td>
                                                    <span class="badge @(counter.IsOkcIntegrated ? "bg-success-transparent" : "bg-danger-transparent")">
                                                        @(counter.IsOkcIntegrated? Localizer["counter.INDEX.ACTIVE"] : Localizer["counter.INDEX.PASSIVE"])
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge @(counter.TsmOpen ? "bg-success-transparent" : "bg-danger-transparent")">
                                                        @(counter.TsmOpen? Localizer["counter.INDEX.ACTIVE"] : Localizer["counter.INDEX.PASSIVE"])
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge @(counter.GmpOpen ? "bg-success-transparent" : "bg-danger-transparent")">
                                                        @(counter.GmpOpen? Localizer["counter.INDEX.ACTIVE"] : Localizer["counter.INDEX.PASSIVE"])
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="hstack gap-2 fs-15">
                                                        <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                           onclick="openEditModal(@counter.Id)">
                                                            <i class="ri-edit-line"></i>
                                                        </a>
                                                        <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                           onclick="confirmDelete(@counter.Id)">
                                                            <i class="ri-delete-bin-line"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="7" class="text-center">@Localizer["counter.INDEX.NO_RECORD"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Düzenleme Modalı -->
<div class="modal fade" id="editCounterModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title">@Localizer["counter.INDEX.EDIT_COUNTER"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editCounterForm">
                    <input type="hidden" id="editId" name="Id" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["counter.INDEX.COUNTER_NAME_TR"]</label>
                            <input type="text" class="form-control" id="editNameTr" name="NameTr" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["counter.INDEX.COUNTER_NAME_EN"]</label>
                            <input type="text" class="form-control" id="editNameEn" name="NameEn" />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["counter.INDEX.OKC_SERIAL"]</label>
                            <input type="text" class="form-control" id="editSerial" name="OkcFiscalSerialNumber" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["counter.INDEX.IP_ADDRESS"]</label>
                            <input type="text" class="form-control" id="editIp" name="IpAddress" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["counter.INDEX.PORT"]</label>
                            <input type="number" class="form-control" id="editPort" name="Port" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer["counter.INDEX.VERSION"]</label>
                            <input type="text" class="form-control" id="editVersion" name="Version" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">@Localizer["counter.INDEX.SAVE"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function openEditModal(id) {
        $.get('/Counter/GetById', { id: id }, function (data) {
            $('#editId').val(data.counter.id);

            var trName = "";
            var enName = "";
            if (data.translations) {
                var tr = data.translations.find(t => t.languageId == 1);
                var en = data.translations.find(t => t.languageId == 2);
                if (tr) trName = tr.name;
                if (en) enName = en.name;
            }
            $('#editNameTr').val(trName);
            $('#editNameEn').val(enName);

            $('#editSerial').val(data.counter.okcFiscalSerialNumber);
            $('#editIp').val(data.counter.ipAddress);
            $('#editPort').val(data.counter.port);
            $('#editVersion').val(data.counter.version);

            $('#editCounterModal').modal('show');
        }).fail(function () {
            Swal.fire({
                icon: 'error',
                title: '@Localizer["counter.INDEX.ERROR"]',
                text: '@Localizer["counter.INDEX.ERROR_FETCH"]'
            });
        });
    }

    $("#editCounterForm").submit(function (e) {
        e.preventDefault();

        var payload = {
            Id: $('#editId').val(),
            OkcFiscalSerialNumber: $('#editSerial').val(),
            IpAddress: $('#editIp').val(),
            Port: $('#editPort').val(),
            Version: $('#editVersion').val()
        };

        $.post('/Counter/Update', payload, function (res) {
            if (res.success) {
                var translations = [
                    { CounterId: payload.Id, LanguageId: 1, Name: $('#editNameTr').val() },
                    { CounterId: payload.Id, LanguageId: 2, Name: $('#editNameEn').val() }
                ];

                translations.forEach(tr => {
                    $.post('/Counter/UpdateTranslation', tr);
                });

                Swal.fire('@Localizer["counter.INDEX.SUCCESS"]', res.message, 'success')
                    .then(() => location.reload());
            } else {
                Swal.fire('@Localizer["counter.INDEX.ERROR"]', res.message, 'error');
            }
        });
    });

    function confirmDelete(id) {
        Swal.fire({
            title: '@Localizer["counter.INDEX.CONFIRM_TITLE"]',
            text: '@Localizer["counter.INDEX.CONFIRM_TEXT"]',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: '@Localizer["counter.INDEX.CONFIRM_OK"]',
            cancelButtonText: '@Localizer["counter.INDEX.CONFIRM_CANCEL"]'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post('/Counter/Delete', { id: id }, function (res) {
                    if (res.success) {
                        Swal.fire('@Localizer["counter.INDEX.DELETED"]', res.message, 'success')
                            .then(() => location.reload());
                    } else {
                        Swal.fire('@Localizer["counter.INDEX.ERROR"]', res.message, 'error');
                    }
                });
            }
        });
    }
</script>
