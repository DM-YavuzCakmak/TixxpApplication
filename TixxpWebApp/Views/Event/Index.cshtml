@model Tixxp.WebApp.Models.Event.EventIndexViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content app-content">
    <div class="container-fluid">
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb text-fixed-white">
            <h1 class="page-title fw-medium fs-18 mb-0 text-fixed-white">@Localizer["event.INDEX.EVENT_LIST"]</h1>
            <button class="btn btn-primary btn-sm" onclick="openEditEventModal(0)">+ @Localizer["event.INDEX.NEW_EVENT"]</button>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">@Localizer["event.INDEX.EVENTS"]</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-nowrap table-sm">
                                <thead>
                                    <tr>
                                        <th>@Localizer["event.INDEX.EVENT_NAME"]</th>
                                        <th>@Localizer["event.INDEX.EVENT_TRANSLATIONS"]</th>
                                        <th>@Localizer["event.INDEX.OPENING_TIME"]</th>
                                        <th>@Localizer["event.INDEX.CLOSING_TIME"]</th>
                                        <th>@Localizer["event.INDEX.B2C_OPEN"]</th>
                                        <th>@Localizer["event.INDEX.B2B_OPEN"]</th>
                                        <th>@Localizer["event.INDEX.ACTIONS"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model?.Events != null && Model.Events.Any())
                                    {
                                        foreach (var item in Model.Events)
                                        {
                                            <tr>
                                                <td>@item.DisplayName</td>
                                                <td>
                                                    @if (item.Translations != null && item.Translations.Any())
                                                    {
                                                        foreach (var translation in item.Translations)
                                                        {
                                                            <div>
                                                                <strong>@translation.Language?.Code?.ToUpperInvariant():</strong> @translation.Name
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">@Localizer["event.INDEX.NO_TRANSLATION"]</span>
                                                    }
                                                </td>
                                                <td>@item.Event.OpeningTime?.ToString(@"hh\:mm")</td>
                                                <td>@item.Event.ClosingTime?.ToString(@"hh\:mm")</td>
                                                <td>
                                                    <span class="badge @(item.Event.IsAvailableOnB2C ? "bg-success-transparent" : "bg-danger-transparent")">
                                                        @Localizer[item.Event.IsAvailableOnB2C ? "event.INDEX.OPEN" : "event.INDEX.CLOSING"]
                                                    </span>
                                                </td>

                                                <td>
                                                    <span class="badge @(item.Event.IsAvailableOnB2B ? "bg-success-transparent" : "bg-danger-transparent")">
                                                        @Localizer[item.Event.IsAvailableOnB2B ? "event.INDEX.OPEN" : "event.INDEX.CLOSING"]
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="hstack gap-2 fs-15">
                                                        <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                           onclick="openEditEventModal(@item.Event.Id)">
                                                            <i class="ri-edit-line"></i>
                                                        </a>
                                                        <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                           onclick="confirmDeleteEvent(@item.Event.Id)">
                                                            <i class="ri-delete-bin-line"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="7" class="text-center">@Localizer["event.INDEX.NOT_FOUND"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Düzenleme Modalı -->
<div class="modal fade" id="editEventModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title">@Localizer["event.INDEX.EVENT"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Localizer["event.INDEX.CLOSE"]"></button>
            </div>

            <div class="modal-body">
                <form id="editEventForm">
                    @* @Html.AntiForgeryToken() *@
                    <input type="hidden" id="editId" name="Id" value="0" />

                    <!-- Saatler (Başlangıç + Bitiş) -->
                    <div class="card custom-card mb-3">
                        <div class="card-header">
                            <div class="card-title mb-0">@Localizer["event.INDEX.HOURS"]</div>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label" for="editStartTime">@Localizer["event.INDEX.OPENING_TIME"]</label>
                                    <input type="time" class="form-control" id="editStartTime" name="OpeningTime" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="editEndTime">@Localizer["event.INDEX.CLOSING_TIME"]</label>
                                    <input type="time" class="form-control" id="editEndTime" name="ClosingTime" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Durumlar (B2C + B2B) -->
                    <div class="card custom-card mb-3">
                        <div class="card-header">
                            <div class="card-title mb-0">@Localizer["event.INDEX.STATUS"]</div>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label" for="editB2C">@Localizer["event.INDEX.B2C_STATUS"]</label>
                                    <select class="form-select" id="editB2C" name="IsAvailableOnB2C">
                                        <option value="true">@Localizer["event.INDEX.ACTIVE"]</option>
                                        <option value="false">@Localizer["event.INDEX.PASSIVE"]</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="editB2B">@Localizer["event.INDEX.B2B_STATUS"]</label>
                                    <select class="form-select" id="editB2B" name="IsAvailableOnB2B">
                                        <option value="true">@Localizer["event.INDEX.ACTIVE"]</option>
                                        <option value="false">@Localizer["event.INDEX.PASSIVE"]</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Çeviri Alanları -->
                    <div class="card custom-card mb-3">
                        <div class="card-header">
                            <div class="card-title mb-0">@Localizer["event.INDEX.TRANSLATION_SECTION"]</div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted small mb-3">@Localizer["event.INDEX.TRANSLATION_HINT"]</p>
                            <div class="row g-3">
                                @if (Model?.Languages != null && Model.Languages.Any())
                                {
                                    foreach (var lang in Model.Languages)
                                    {
                                        var langCode = lang.Code?.ToLowerInvariant() ?? $"lang-{lang.Id}";
                                        <div class="col-md-6">
                                            <label class="form-label" for="translation-@langCode">
                                                @Localizer["event.INDEX.LANGUAGE_TEMPLATE", lang.Code?.ToUpperInvariant()]
                                            </label>
                                            <input type="text"
                                                   class="form-control translation-input"
                                                   id="translation-@langCode"
                                                   data-lang="@langCode"
                                                   placeholder="@Localizer["event.INDEX.NAME_PLACEHOLDER"]" />
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12">
                                        <div class="alert alert-warning mb-0">
                                            @Localizer["event.INDEX.NO_LANGUAGE_DEFINED"]
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100" id="btn-save">@Localizer["event.INDEX.SAVE"]</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
            function confirmDeleteEvent(id) {
            Swal.fire({
                title: '@Localizer["event.INDEX.ARE_YOU_SURE"]',
                text: "@Localizer["event.INDEX.DELETE_EVENT"]",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: '@Localizer["event.INDEX.YES_DELETE"]',
                cancelButtonText: '@Localizer["event.INDEX.CANCEL"]'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Event/Delete',
                        method: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire("@Localizer["event.INDEX.DELETED"]", response.message, "success").then(() => location.reload());
                            } else {
                                Swal.fire("@Localizer["event.INDEX.ERROR"]", response.message, "error");
                            }
                        },
                        error: function () {
                            Swal.fire("@Localizer["event.INDEX.ERROR"]", "@Localizer["event.INDEX.SERVER_ERROR"]", "error");
                        }
                    });
                }
            });
        }

        function resetTranslationInputs() {
            $('.translation-input').each(function () {
                $(this).val('');
            });
        }

        function bindTranslations(translations) {
            resetTranslationInputs();
            if (!translations || !Array.isArray(translations)) {
                return;
            }

            translations.forEach(function (item) {
                if (!item.languageCode) return;
                const code = item.languageCode.toString().toLowerCase();
                const input = $('.translation-input[data-lang="' + code + '"]');
                if (input.length) {
                    input.val(item.name);
                }
            });
        }

        function openEditEventModal(id) {
            const modalTitle = $('#editEventModal .modal-title');
            resetTranslationInputs();
            if (id === 0) {
                $('#editEventForm')[0].reset();
                $('#editId').val(0);
                modalTitle.text("@Localizer["event.INDEX.ADD_NEW_EVENT"]");
                $('#editEventModal').modal('show');
                return;
            }

            $.get('/Event/GetById', { id: id }, function (data) {
                $('#editId').val(data.id);
                $('#editStartTime').val(data.openingTime);
                $('#editEndTime').val(data.closingTime);
                $('#editB2C').val(data.isAvailableOnB2C.toString());
                $('#editB2B').val(data.isAvailableOnB2B.toString());
                bindTranslations(data.translations);

                modalTitle.text("@Localizer["event.INDEX.EDIT_EVENT"]");
                $('#editEventModal').modal('show');
            }).fail(function () {
                Swal.fire("@Localizer["event.INDEX.ERROR"]", "@Localizer["event.INDEX.GET_EVENT_ERROR"]", "error");
            });
        }

        $('#editEventForm').submit(function (e) {
            e.preventDefault();
            const id = Number($('#editId').val());
            const translations = [];

            $('.translation-input').each(function () {
                translations.push({
                    LanguageCode: $(this).data('lang'),
                    Name: $(this).val()
                });
            });

            const data = {
                Id: id,
                StartTime: $('#editStartTime').val(),
                EndTime: $('#editEndTime').val(),
                IsAvailableOnB2C: $('#editB2C').val() === "true",
                IsAvailableOnB2B: $('#editB2B').val() === "true",
                Translations: translations
            };

            const url = id === 0 ? '/Event/Create' : '/Event/Update';

            $.ajax({
                url: url,
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (response) {
                    if (response.success) {
                        Swal.fire("@Localizer["event.INDEX.SUCCESS"]", response.message, "success").then(() => location.reload());
                    } else {
                        Swal.fire("@Localizer["event.INDEX.ERROR"]", response.message, "error");
                    }
                },
                error: function () {
                    Swal.fire("@Localizer["event.INDEX.ERROR"]", "@Localizer["event.INDEX.SERVER_ERROR"]", "error");
                }
            });
        });
    </script>
}

