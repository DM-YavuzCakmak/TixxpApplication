@using Tixxp.Entities.EventTicketPrice
@using Tixxp.Entities.Events
@using Tixxp.Entities.TicketType
@using Tixxp.Entities.PriceCategory
@using Tixxp.Entities.CurrencyType
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model List<EventTicketPriceEntity>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Etkinlik Bilet Fiyatları";
    var events = ViewBag.Events as List<EventEntity>;
    var ticketTypes = ViewBag.TicketTypes as List<TicketTypeEntity>;
    var priceCategories = ViewBag.PriceCategories as List<PriceCategoryEntity>;
    var currencyTypes = ViewBag.CurrencyTypes as List<CurrencyTypeEntity>;
}

<div class="main-content app-content">
    <div class="container-fluid">
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb text-fixed-white">
            <h1 class="page-title fw-medium fs-18 mb-0 text-fixed-white">@Localizer["eventTicketPrice.INDEX.EVENT_TICKET_PRICE"]</h1>
            <button class="btn btn-primary btn-sm" onclick="openEditEventTicketPriceModal(0)">+ @Localizer["eventTicketPrice.INDEX.NEW_PRICE"]</button>
        </div>

        <div class="card custom-card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-sm text-nowrap">
                        <thead>
                            <tr>
                                <th>@Localizer["eventTicketPrice.INDEX.EVENT"]</th>
                                <th>@Localizer["eventTicketPrice.INDEX.TICKET_TYPE"]</th>
                                <th>@Localizer["eventTicketPrice.INDEX.PRICE_CATEGORY"]</th>
                                <th>@Localizer["eventTicketPrice.INDEX.PRICE"]</th>
                                <th>@Localizer["eventTicketPrice.INDEX.CURRENCY_TYPE"]</th>
                                <th>@Localizer["eventTicketPrice.INDEX.ACTIONS"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Event?.Name</td>
                                        <td>@item.TicketType?.Name</td>
                                        <td>@item.PriceCategory?.Name</td>
                                        <td>@item.Price.ToString("N2")</td>
                                        <td>@item.CurrencyType?.Symbol</td>
                                        <td>
                                            <div class="hstack gap-2">
                                                <a class="btn btn-sm btn-light" onclick="openEditEventTicketPriceModal(@item.Id)">
                                                    <i class="ri-edit-line"></i>
                                                </a>
                                                <a class="btn btn-sm btn-light" onclick="confirmDeleteEventTicketPrice(@item.Id)">
                                                    <i class="ri-delete-bin-line"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="6" class="text-center">@Localizer["eventTicketPrice.INDEX.NO_RECORDS_FOUND"].</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editEventTicketPriceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title">@Localizer["eventTicketPrice.INDEX.EVENT_TICKET_PRICE"]</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editEventTicketPriceForm">
                    <input type="hidden" id="eventTicketPriceId" name="Id" />
                    <div class="mb-3">
                        <label>@Localizer["eventTicketPrice.INDEX.EVENT"]</label>
                        <select class="form-select" id="eventId" required>
                            <option value="">@Localizer["eventTicketPrice.INDEX.SELECT"]</option>
                            @foreach (var ev in events)
                            {
                                <option value="@ev.Id">@ev.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>@Localizer["eventTicketPrice.INDEX.TICKET_TYPE"]</label>
                        <select class="form-select" id="ticketTypeId" required>
                            <option value="">@Localizer["eventTicketPrice.INDEX.SELECT"]</option>
                            @foreach (var t in ticketTypes)
                            {
                                <option value="@t.Id">@t.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>@Localizer["eventTicketPrice.INDEX.PRICE_CATEGORY"]</label>
                        <select class="form-select" id="priceCategoryId" required>
                            <option value="">@Localizer["eventTicketPrice.INDEX.SELECT"]</option>
                            @foreach (var p in priceCategories)
                            {
                                <option value="@p.Id">@p.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>@Localizer["eventTicketPrice.INDEX.CURRENCY_TYPE"]</label>
                        <select class="form-select" id="currencyTypeId" required>
                            <option value="">@Localizer["eventTicketPrice.INDEX.SELECT"]</option>
                            @foreach (var c in currencyTypes)
                            {
                                <option value="@c.Id">@c.Symbol</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label>@Localizer["eventTicketPrice.INDEX.PRICE"]</label>
                        <input type="number" class="form-control" id="price" step="0.01" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">@Localizer["eventTicketPrice.INDEX.SAVE"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditEventTicketPriceModal(id) {
            const modal = $('#editEventTicketPriceModal');
            const form = $('#editEventTicketPriceForm');

            if (id === 0) {
                form[0].reset();
                $('#eventTicketPriceId').val(0);
                modal.find('.modal-title').text("@Localizer["eventTicketPrice.INDEX.NEW_EVENT_TICKET_PRICE"]");
                modal.modal('show');
                return;
            }

            $.get('/EventTicketPrice/GetById', { id: id }, function (data) {
                $('#eventTicketPriceId').val(data.id);
                $('#eventId').val(data.eventId);
                $('#ticketTypeId').val(data.ticketTypeId);
                $('#priceCategoryId').val(data.priceCategoryId);
                $('#currencyTypeId').val(data.currencyTypeId);
                $('#price').val(data.price);
                modal.find('.modal-title').text("@Localizer["eventTicketPrice.INDEX.EDIT_PRICE"]");
                modal.modal('show');
            }).fail(() => Swal.fire("@Localizer["eventTicketPrice.INDEX.ERROR"]", "@Localizer["eventTicketPrice.INDEX.DATA_NOT_BE_RECEIVED"].", "error"));
        }

        $('#editEventTicketPriceForm').submit(function (e) {
            e.preventDefault();
            const id = Number($('#eventTicketPriceId').val());

            const data = {
                Id: id,
                EventId: $('#eventId').val(),
                TicketTypeId: $('#ticketTypeId').val(),
                PriceCategoryId: $('#priceCategoryId').val(),
                CurrencyTypeId: $('#currencyTypeId').val(),
                Price: parseFloat($('#price').val())
            };

            const url = id === 0 ? '/EventTicketPrice/Create' : '/EventTicketPrice/Update';

            $.ajax({
                url: url,
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (res) {
                    if (res.success) {
                        Swal.fire("@Localizer["eventTicketPrice.INDEX.SUCCESS"]", res.message, "success").then(() => location.reload());
                    } else {
                        Swal.fire("@Localizer["eventTicketPrice.INDEX.ERROR"]", res.message, "error");
                    }
                },
                error: () => Swal.fire("@Localizer["eventTicketPrice.INDEX.ERROR"]", "@Localizer["eventTicketPrice.INDEX.SERVER_NOT_BE_RECEIVED"]", "error")
            });
        });

        function confirmDeleteEventTicketPrice(id) {
            Swal.fire({
                title: '@Localizer["eventTicketPrice.INDEX.ARE_YOU_SURE"]?',
                text: "@Localizer["eventTicketPrice.INDEX.DELETE_PRICE_INFO"]",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: '@Localizer["eventTicketPrice.INDEX.YES_DELETE"]!',
                cancelButtonText: '@Localizer["eventTicketPrice.INDEX.CANCEL"]'
            }).then(result => {
                if (result.isConfirmed) {
                    $.post('/EventTicketPrice/Delete', { id: id }, function (res) {
                        if (res.success) {
                            Swal.fire("@Localizer["eventTicketPrice.INDEX.DELETED"]", res.message, "success").then(() => location.reload());
                        } else {
                            Swal.fire("@Localizer["eventTicketPrice.INDEX.ERROR"]", res.message, "error");
                        }
                    });
                }
            });
        }
    </script>
}
