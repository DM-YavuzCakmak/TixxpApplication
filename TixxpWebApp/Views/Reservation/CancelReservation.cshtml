@using Tixxp.Entities.Reservation
@using Tixxp.Core.Utilities.Enums.ReservationStatusEnum
@model List<ReservationEntity>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Rezervasyonlar";
}

<div class="main-content app-content">
    <div class="container-fluid">
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb text-fixed-white">
            <h1 class="page-title fw-medium fs-18 mb-0 text-fixed-white">Rezervasyon Durum Güncelleme</h1>
        </div>

        <div class="card custom-card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-sm text-nowrap">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Bilet Sayısı</th>
                                <th>Toplam Tutar</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                       @*  <td>@item.Name @item.Surname</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.NumberOfTickets</td> *@
                                        <td>@item.TotalPrice?.ToString("N2")</td>
                                        <td>@((ReservationStatusEnum)item.StatusId)</td>
                                        <td>
                                            <div class="hstack gap-2">
                                                <a class="btn btn-sm btn-light" onclick="openEditReservationModal(@item.Id)">
                                                    <i class="ri-edit-line"></i>
                                                </a>
                                                <a class="btn btn-sm btn-light" onclick="confirmDeleteReservation(@item.Id)">
                                                    <i class="ri-delete-bin-line"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="7" class="text-center">Kayıt bulunamadı.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editReservationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title">Rezervasyon</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editReservationForm">
                    <input type="hidden" id="reservationId" name="Id" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Ad</label>
                            <input type="text" class="form-control" id="name" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Soyad</label>
                            <input type="text" class="form-control" id="surname" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Email</label>
                            <input type="email" class="form-control" id="email" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Telefon</label>
                            <input type="text" class="form-control" id="phone" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Bilet Sayısı</label>
                            <input type="number" class="form-control" id="numberOfTickets" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Toplam Tutar</label>
                            <input type="number" step="0.01" class="form-control" id="totalPrice" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Durum</label>
                            <select class="form-select" id="statusId" required>
                                @foreach (var status in Enum.GetValues(typeof(ReservationStatusEnum)))
                                {
                                    <option value="@((int)status)">@status</option>
                                }
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditReservationModal(id) {
            const modal = $('#editReservationModal');
            const form = $('#editReservationForm');

            if (id === 0) {
                form[0].reset();
                $('#reservationId').val(0);
                modal.find('.modal-title').text("Yeni Rezervasyon");
                modal.modal('show');
                return;
            }

            $.get('/Reservation/GetById', { id: id }, function (data) {
                $('#reservationId').val(data.id);
                $('#name').val(data.name);
                $('#surname').val(data.surname);
                $('#email').val(data.email);
                $('#phone').val(data.phone);
                $('#numberOfTickets').val(data.numberOfTickets);
                $('#totalPrice').val(data.totalPrice);
                $('#statusId').val(data.statusId);
                modal.find('.modal-title').text("Rezervasyon Düzenle");
                modal.modal('show');
            }).fail(() => Swal.fire("Hata", "Veri alınamadı.", "error"));
        }

        $('#editReservationForm').submit(function (e) {
            e.preventDefault();

            const data = {
                Id: Number($('#reservationId').val()),
                Name: $('#name').val(),
                Surname: $('#surname').val(),
                Email: $('#email').val(),
                Phone: $('#phone').val(),
                NumberOfTickets: $('#numberOfTickets').val(),
                TotalPrice: $('#totalPrice').val(),
                StatusId: $('#statusId').val()
            };

            const url = data.Id === 0 ? '/Reservation/Create' : '/Reservation/Update';

            $.ajax({
                url: url,
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (res) {
                    if (res.success) {
                        Swal.fire("Başarılı", res.message, "success").then(() => location.reload());
                    } else {
                        Swal.fire("Hata", res.message, "error");
                    }
                },
                error: () => Swal.fire("Hata", "Sunucuya ulaşılamadı.", "error")
            });
        });

        function confirmDeleteReservation(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu rezervasyonu silmek üzeresiniz.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'Vazgeç'
            }).then(result => {
                if (result.isConfirmed) {
                    $.post('/Reservation/Delete', { id: id }, function (res) {
                        if (res.success) {
                            Swal.fire("Silindi", res.message, "success").then(() => location.reload());
                        } else {
                            Swal.fire("Hata", res.message, "error");
                        }
                    });
                }
            });
        }
    </script>
}
