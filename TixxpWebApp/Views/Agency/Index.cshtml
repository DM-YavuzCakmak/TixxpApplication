@model List<Tixxp.Entities.Agency.AgencyEntity>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content app-content">
    <div class="container-fluid">
        <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb text-fixed-white">
            <h1 class="page-title fw-medium fs-18 mb-0 text-fixed-white">@Localizer["agency.INDEX.TITLE"]</h1>
            @if (User.IsInRole("TIXXP_AGENCY_ADD"))
            {
                <button class="btn btn-primary btn-sm" onclick="openEditAgencyModal(0)">+ @Localizer["agency.INDEX.ADD_NEW"]</button>
            }
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="card custom-card">
                    <div class="card-header">
                        <div class="card-title">@Localizer["agency.INDEX.AGENCIES"]</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table text-nowrap table-sm">
                                <thead>
                                    <tr>
                                        <th>@Localizer["agency.INDEX.NAME"]</th>
                                        @if (User.IsInRole("TIXXP_AGENCY_EDIT") || User.IsInRole("TIXXP_AGENCY_DELETE"))
                                        {
                                            <th>@Localizer["agency.INDEX.ACTIONS"]</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Name</td>
                                                @if (User.IsInRole("TIXXP_AGENCY_EDIT") || User.IsInRole("TIXXP_AGENCY_DELETE"))
                                                {
                                                    <td>
                                                        <div class="hstack gap-2 fs-15">
                                                            @if (User.IsInRole("TIXXP_AGENCY_EDIT"))
                                                            {
                                                                <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                                   onclick="openEditAgencyModal(@item.Id)"
                                                                   title="@Localizer["agency.INDEX.EDIT"]">
                                                                    <i class="ri-edit-line"></i>
                                                                </a>
                                                            }
                                                            @if (User.IsInRole("TIXXP_AGENCY_DELETE"))
                                                            {
                                                                <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-light"
                                                                   onclick="confirmDeleteAgency(@item.Id)"
                                                                   title="@Localizer["agency.INDEX.DELETE"]">
                                                                    <i class="ri-delete-bin-line"></i>
                                                                </a>
                                                            }
                                                        </div>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="2" class="text-center">@Localizer["agency.INDEX.NO_RECORDS_FOUND"]</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Düzenleme Modalı -->
<div class="modal fade" id="editAgencyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="editAgencyModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editAgencyForm">
                    <input type="hidden" id="editAgencyId" name="Id" />
                    <div class="mb-3">
                        <label class="form-label">@Localizer["agency.INDEX.AGENCY_NAME"]</label>
                        <input type="text" class="form-control" id="editAgencyName" name="Name" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">@Localizer["agency.INDEX.SAVE"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const localizer = {
            areYouSure: '@Localizer["agency.INDEX.ARE_YOU_SURE"].Value.Replace("'", "\\'")',
            deleteConfirmation: '@Localizer["agency.INDEX.DELETE_CONFIRMATION"].Value.Replace("'", "\\'")',
            yesDelete: '@Localizer["agency.INDEX.YES_DELETE"].Value.Replace("'", "\\'")',
            cancel: '@Localizer["agency.INDEX.CANCEL"].Value.Replace("'", "\\'")',
            deleted: '@Localizer["agency.INDEX.DELETED"].Value.Replace("'", "\\'")',
            success: '@Localizer["agency.INDEX.SUCCESS"].Value.Replace("'", "\\'")',
            error: '@Localizer["agency.INDEX.ERROR"].Value.Replace("'", "\\'")',
            serverError: '@Localizer["agency.INDEX.SERVER_ERROR"].Value.Replace("'", "\\'")',
            dataError: '@Localizer["agency.INDEX.DATA_ERROR"].Value.Replace("'", "\\'")',
            addAgency: '@Localizer["agency.INDEX.ADD_AGENCY"].Value.Replace("'", "\\'")',
            editAgency: '@Localizer["agency.INDEX.EDIT_AGENCY"].Value.Replace("'", "\\'")'
        };

        function confirmDeleteAgency(id) {
            Swal.fire({
                title: localizer.areYouSure,
                text: localizer.deleteConfirmation,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: localizer.yesDelete,
                cancelButtonText: localizer.cancel
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Agency/Delete', { id: id }, function (response) {
                        if (response.success) {
                            Swal.fire(localizer.deleted, response.message, "success").then(() => location.reload());
                        } else {
                            Swal.fire(localizer.error, response.message, "error");
                        }
                    }).fail(() => Swal.fire(localizer.error, localizer.serverError, "error"));
                }
            });
        }

        function openEditAgencyModal(id) {
            const modalTitle = $('#editAgencyModalTitle');
            if (id === 0) {
                $('#editAgencyForm')[0].reset();
                $('#editAgencyId').val(0);
                modalTitle.text(localizer.addAgency);
                $('#editAgencyModal').modal('show');
                return;
            }

            $.get('/Agency/GetById', { id: id }, function (data) {
                $('#editAgencyId').val(data.id);
                $('#editAgencyName').val(data.name);
                modalTitle.text(localizer.editAgency);
                $('#editAgencyModal').modal('show');
            }).fail(() => Swal.fire(localizer.error, localizer.dataError, "error"));
        }

        $('#editAgencyForm').submit(function (e) {
            e.preventDefault();
            const id = Number($('#editAgencyId').val());
            const data = {
                Id: id,
                Name: $('#editAgencyName').val()
            };

            const url = id === 0 ? '/Agency/Create' : '/Agency/Update';

            $.ajax({
                url: url,
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (response) {
                    if (response.success) {
                        Swal.fire(localizer.success, response.message, "success").then(() => location.reload());
                    } else {
                        Swal.fire(localizer.error, response.message, "error");
                    }
                },
                error: () => Swal.fire(localizer.error, localizer.serverError, "error")
            });
        });
    </script>
}
