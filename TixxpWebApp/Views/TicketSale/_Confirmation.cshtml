@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white fw-semibold">
        @Localizer["confirmation.CART_SUMMARY"]
    </div>
    <div class="card-body">
        <div id="conf-cart-empty" class="alert alert-warning d-none">
            @Localizer["confirmation.CART_EMPTY"]
        </div>

        <div id="conf-cart-wrap" class="table-responsive d-none">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>@Localizer["confirmation.PRODUCT"]</th>
                        <th class="text-center">@Localizer["confirmation.PIECE"]</th>
                        <th class="text-end">@Localizer["confirmation.UNIT_PRICE"]</th>
                        <th class="text-end">@Localizer["confirmation.SUBTOTAL"]</th>
                    </tr>
                </thead>
                <tbody id="conf-cart-rows">
                    @* JS dolduracak *@
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">@Localizer["confirmation.TOTAL"]</th>
                        <th class="text-end" id="conf-grand-total">0</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-outline-secondary" onclick="goBackTo('detail')">
                ← @Localizer["confirmation.BACK"]
            </button>

            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-danger" onclick="window.clearCartAndBack?.()">
                    @Localizer["confirmation.CLEAR_CART"]
                </button>
                <button type="button" class="btn btn-primary" onclick="window.submitConfirmation?.()">
                    @Localizer["confirmation.CONFIRM_SALE"]
                </button>
            </div>
        </div>
    </div>
</div>
